<html lang="en" ng-app="eeBrokenShoeLeague">
<head>
    <link rel="stylesheet" href="~/bower_components/angular-material/angular-material.min.css">
    <link rel="stylesheet" href="~/BSL.Client/assets/styles/site.css">
    <title>Broken Shoe League</title>
</head>
<body layout="row" ng-controller="HomeController as homeCtrl">
    <md-sidenav layout="column" class="md-sidenav-left md-whiteframe-z2" style="min-width:200px" md-component-id="left" md-is-locked-open="$mdMedia('gt-md')">
        <md-toolbar class="md-tall md-hue-2 top_menu_holder">
            <span flex></span>
            <div layout="column" class="md-toolbar-tools-bottom inset">
                <div class="avatar_holder">
                    <user-avatar></user-avatar>
                </div>
                <span></span>
                <div>Firstname Lastname</div>
                <div><b>email@domainname.com</b></div>
            </div>
        </md-toolbar>
        <md-list>
            <span ng-repeat="groupMenu in homeCtrl.menu">
                <md-subheader>{{groupMenu.header}}</md-subheader>
                <md-item md-ink-ripple ng-repeat="menuItem in groupMenu.items">
                    <a>
                        <md-item-content layout="row" layout-align="start center">
                            <div class="submenu_link" ng-click="homeCtrl.go(menuItem.link)">
                                <ng-md-icon icon="{{menuItem.icon}}"></ng-md-icon>
                            </div>
                            <div class="submenu_link" ng-click="homeCtrl.go(menuItem.link)">
                                {{menuItem.title}}
                            </div>
                        </md-item-content>
                    </a>
                </md-item>
                <md-divider></md-divider>
            </span>
        </md-list>
    </md-sidenav>
    <div layout="column" class="relative" layout-fill role="main">
        <md-toolbar>
            <div class="md-toolbar-tools">
                <md-button ng-click="homeCtrl.toggleSidenav('left')" hide-gt-md aria-label="Menu">
                    <ng-md-icon icon="menu"></ng-md-icon>
                </md-button>
                <h3>
                    Dashboard
                </h3>
                <span flex></span>
                <md-button aria-label="Search" ng-click="showSearch = !showSearch">
                    <ng-md-icon icon="search"></ng-md-icon>
                </md-button>
                <md-button aria-label="Open Settings" ng-click="showListBottomSheet($event)">
                    <ng-md-icon icon="more_vert"></ng-md-icon>
                </md-button>
            </div>
        </md-toolbar>
        <md-content flex md-scroll-y>
            <ui-view layout="column" layout-fill layout-padding>
            </ui-view>
        </md-content>
    </div>

    <!-- Angular related scripts -->
    <script src="~/bower_components/angular/angular.js"></script>
    <script src="~/bower_components/angular-route/angular-route.min.js"></script>
    <script src="~/bower_components/angular-animate/angular-animate.min.js"></script>
    <script src="~/bower_components/angular-aria/angular-aria.min.js"></script>
    <script src="~/bower_components/angular-material/angular-material.min.js"></script>
    <script src="~/bower_components/angular-material-icons/angular-material-icons.min.js"></script>

    <!-- Main App -->
    <script src="~/BSL.Client/app/broken-shoe-league.module.js"></script>
    <script src="~/BSL.Client/app/broken-shoe-league.config.js"></script>
    <script src="~/BSL.Client/app/broken-shoe-league.route.js"></script>
    <script src="~/BSL.Client/app/broken-shoe-league.constants.js"></script>

    <!-- Services -->
    <!-- directives -->
    <script src="~/BSL.Client/app/components/user-avatar.directive.js"></script>


    <!-- Application Scripts -->
    <script src="~/BSL.Client/app/home/HomeController.js"></script>

</body>
</html>